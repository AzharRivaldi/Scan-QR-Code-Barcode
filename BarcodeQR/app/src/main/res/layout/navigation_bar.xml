            android:layout_width="36.0dip"
            android:layout_height="36.0dip"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_settings"
            android:id="@+id/action_settings"
            android:tint="#ffffff" />

    </LinearLayout>
</LinearLayout>